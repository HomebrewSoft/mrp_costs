<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_list_delibery_form_view" model="ir.ui.view">
        <field name="name">mrp.list.delibery.form.view</field>
        <field name="model">mrp.list_delivery</field>
        <field name="arch" type="xml">
            <form string="Set Costs">
                <group col="4">
                </group>
                <group>
                    <field name="rent"/>
                </group>

                <footer>
                    <button name="calculate" type="object" string="Calculate" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="mrp_list_delivery_action" name="Delivery" res_model="mrp.list_delivery" view_mode="form" target="new"/>

    <menuitem id="list_menu" name="Delivery" parent="sales_team.menu_sale_report" action="mrp_list_delivery_action"/>
</odoo>
